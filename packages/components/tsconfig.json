{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@core": ["../../packages/core/src"],
        "@core/*": ["../../packages/core/src/*"]
      }
    },
    "include": ["index.ts", "src/**/*", "src", "../core/src"]
  }
  