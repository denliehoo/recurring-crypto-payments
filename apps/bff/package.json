{
  "name": "bff",
  "version": "1.0.0",
  "description": "GraphQL Backend-for-Frontend for client applications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "env-cmd -f .env.dev nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "env-cmd -f .env.prod node dist/apps/bff/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "graphql",
    "bff",
    "apollo"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^16.18.38",
    "@apollo/server": "^4.10.4",
    "env-cmd": "^10.1.0",
    "graphql": "^16.8.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0"
  }
}
